# Uncomment this line to define a global platform for your project
# platform :ios, '9.0'

target 'QuickDownloader' do
    # Comment this line if you're not using Swift and don't want to use dynamic frameworks
    use_frameworks!

    # Pods for QuickDownloader

    pod 'Alamofire', '~> 3.4'
    pod 'RxSwift', '~> 2.6'
    pod 'RealmSwift', '~> 1.0'
    pod 'SDWebImage', '~> 3.8'
    pod 'Mantle', '~> 2.0'
    pod 'SnapKit', '0.30.0.beta2'
    
    target 'QuickDownloaderTests' do
        inherit! :search_paths
        # Pods for testing
        pod 'Quick', '~> 0.9'
        pod 'Nimble', '~> 4.1'
    end

    target 'QuickDownloaderUITests' do
        inherit! :search_paths
        # Pods for testing
        pod 'Quick', '~> 0.9'
        pod 'Nimble', '~> 4.1'
    end

end
